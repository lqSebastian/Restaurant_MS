@model RMS_MODELOS.M_TB_CABE_DOCU_VENT
@{
    ViewBag.Title = "Registro de venta";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!-- ORDEN -->
<section class="" id="main_content">

    <link href="~/Content/ui-search/search.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/jspdf@latest/dist/jspdf.min.js"></script>
    <script src="https://unpkg.com/jspdf-autotable@3.1.1/dist/jspdf.plugin.autotable.js"></script>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Orden </a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title </li>
    </ol>
    <div class="container-fluid animated fadeIn">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div id="registro_venta_form_card">
                    @Html.Partial("_venta_form")
                </div>
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-edit"></i> Detalle
                    </div>
                    <div class="card-body pt-0 pl-3" style="min-height:100px">
                        <div class="row">
                            <div class="col-sm-12 p-1">
                                <table id="TB_DETA_DOCU_VENT" class="table table-striped table-bordered table-hover table-condensed ctable-with-buttons" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                Sec.
                                            </th>
                                            <th>
                                                <div style="width:180px"></div>Artículo
                                            </th>
                                            <th>Precio</th>

                                            <th>Cantidad</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="_load" data-load="Venta"></div>

    <div id="_busqueda_ventas" data-request-url="@Url.Action("Busqueda_venta", "Busqueda")"></div>s
    <div id="_detalle_data_loader_orden" data-request-url="@Url.Action("listar_detalle_orden", "Venta",new { FI_COD_EMPR = 1 })"></div>
    <div id="_cargar_orden" data-request-url="@Url.Action("Cargar_Orden", "Venta")"></div>

    <div id="_cargar_venta" data-request-url="@Url.Action("Cargar_Venta", "Venta")"></div>

    <div id="_obtener_nuevo_documento_correlativo" data-request-url="@Url.Action("obtener_nuevo_documento_correlativo", "Venta")"></div>
    <div id="_busqueda_ordenes" data-request-url="@Url.Action("Busqueda_ordenes", "Busqueda")"></div>
    <div id="_detalle_data_loader_venta" data-request-url="@Url.Action("listar_detalle_venta", "Venta",new { FN_IDE_DOCU = ViewBag.numero_venta,FI_COD_EMPR = 1 })"></div>
    <div id="_detalle_data_loader_venta2" data-request-url="@Url.Action("listar_detalle_venta", "Venta",new { FI_COD_EMPR = 1 })"></div>
    <script src="~/Content/ui-search/search.min.js"></script>
</section>