@model RMS_MODELOS.M_TB_CABE_ORDE
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ORDEN -->
<section class="" id="main_content">

    <link href="~/Content/ui-search/search.min.css" rel="stylesheet" />
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            @Html.ActionLink("sunat", "Orden")
            <a href="#">Orden </a>
        </li>

        <li class="breadcrumb-item active">@ViewBag.Title </li>
    </ol>
    <div class="container-fluid animated fadeIn">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header d-md-inline-flex justify-content-center align-items-center">
                        <i class="fa fa-edit"></i> Consulta RUC
                       
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("ConsultaRucAsync", "ConsultaRuc", FormMethod.Post, new { @id = "Frm_Consulta_Ruc", @class = "form-horizontal" }))
                        {
                            <div class="form-group row">
                                @Html.Label("", String.Format("RUC"), new { @class = "col-lg-2 pr-0 col-form-label-sm " })
                                <div class="col-lg-3">
                                    @Html.TextBox("codigo", null, new { @class = "form-control form-control-sm", @id = "TXT_FN_IDE_ORDE"})
                                </div>

                                @Html.Label("", String.Format("Captcha"), new { @class = "col-lg-2 pr-0 col-form-label-sm" })
                                <div class="col-lg-5 ">
                                    <img src="" id="captchaimg" />
                                    <div class="input-group">
                                        @Html.TextBox("codigo", null, new { @class = "form-control  form-control-sm"})
      
                                    </div>
                                </div>

                            </div>
                         

                            <div class="btn-group">
                                <button class="btn btn-secondary btn-lg btn-transparent" id="submitButton" type="button"
                                        title="Procesar Orden (shift + 2)">
                                    <span>
                                        <span class="fa fa-check fa-lg">
                                        </span>
                                    </span>
                                </button>
                            </div>
                        }
                        <script>
                            $("#submitButton").click(function (e) {

                                $.get('@Url.Action("ConsultaRucAsync", "ConsultaRuc")', { codigo: $("#TXT_FN_IDE_ORDE").val() },
                                    function (data, textStatus, jqXHR) {
                                        console.log(data);   
                                    },
                                    "json"
                                );

                            });

                        </script>


                    </div>
                  
                </div>
          
            </div>
          
        </div>
    </div>
   
    <script src="~/Content/ui-search/search.min.js"></script>

</section>


