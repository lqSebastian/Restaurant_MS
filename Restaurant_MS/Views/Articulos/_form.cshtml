@model RMS_MODELOS.M_TB_ARTI
@{
    Layout = null;

}
<div class="card mb-2">
    <div class="card-header d-md-inline-flex justify-content-start align-items-center">

        <i class="fa fa-edit"></i> Mantenimiento de Artículos
    </div>
    <div class="card-body">
        @using (Html.BeginForm("registrar_artículo", "Articulos", FormMethod.Post, new { @id = "Frm_Articulo_Registro", @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <input name="status" id="status" class="invisible d-none" value="@ViewBag.status">
            <div class="form-group row">
                @Html.Label("", String.Format("Cód. artículo"), new { @class = "col-lg-1 pr-0 col-form-label-sm " })
                <div class="col-lg-2">
                    @Html.TextBoxFor(x => x.FS_COD_ARTI, new { @class = "form-control  form-control-sm", @id = "TXT_FS_COD_ARTI" })
                    @Html.ValidationMessageFor(x => x.FS_COD_ARTI, null, new { @class = "label-alert" })
                </div>

                @Html.Label("", String.Format("Descripción"), new { @class = "col-lg-1 pr-0 col-form-label-sm" })
                <div class="col-lg-2">
                    @Html.TextAreaFor(x => x.FS_NOM_ARTI, new { @class = "form-control  form-control-sm", @id = "TXT_FS_NOM_ARTI" })
                    @Html.ValidationMessageFor(x => x.FS_NOM_ARTI, null, new { @class = "label-alert" })
                </div>

                @Html.Label("", String.Format("Clase"), new { @class = "col-lg-1 pr-0 col-form-label-sm" })
                <div class="col-lg-2">
                    @Html.DropDownList("FS_COD_CLAS", (SelectList)ViewBag.listado_clase, new { @class = "form-control  form-control-sm", @id = "TXT_FS_COD_CLAS" })
                </div>

                @Html.Label("", String.Format("Precio"), new { @class = "col-lg-1 pr-0 col-form-label-sm" })
                <div class="col-lg-1">
                    @Html.TextBoxFor(x => x.FN_IMP_VENT, new { @class = "form-control _valid-number-l-11  form-control-sm", @id = "TXT_FN_IMP_VENT" })
                    @Html.ValidationMessageFor(x => x.FN_IMP_VENT, null, new { @class = "label-alert" })
                </div>
            </div>
            <div class="form-group row mb-0">
                @Html.Label("", String.Format("Observación"), new { @class = "col-lg-1 pr-0 col-form-label-sm " })
                <div class="col-lg-2">
                    @Html.TextAreaFor(x => @x.FS_DES_OBSE, new { @class = "form-control form-control-sm", @id = "TXT_FS_DES_OBSE",
               })
                    @Html.ValidationMessageFor(x => x.FS_DES_OBSE, null, new { @class = "label-alert" })
                </div>

                @Html.Label("", String.Format("Foto"), new { @class = "col-lg-1 pr-0 col-form-label-sm " })
                <div class="col-lg-6">

                    <div class="input-file-container">
                        <canvas id="imageCanvas"></canvas>
                        <label for="custom-file-upload" class="filupp input-file-trigger">
                            <span class="filupp-file-name js-value">Buscar archivo</span>
                            <input type="file" name="imagen_articulo" class="input-file" value="1" id="custom-file-upload" />
                        </label>
                        <p class="file-return">@Model.FS_RUT_FOTO</p>
                    </div>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="btn-group ml-auto mr-1 mt-sm-1">
                    <button class="btn btn-secondary btn-lg btn-ghost-light" id="submitButton" type="button"
                            title="Registrar/Actualizar artículo">
                        <span class="fa fa-check fa-lg text-success">
                        </span>
                    </button>
                    <button class="btn btn-secondary btn-lg btn-ghost-light" id="resetButton" type="reset"
                            title="Limpiar campos">
                        <span class="fa fa-undo fa-lg text-dark">
                        </span>
                    </button>
                </div>
            </div>

        }
    </div>
</div>
<script>
</script>