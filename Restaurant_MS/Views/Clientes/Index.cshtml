@model RMS_MODELOS.M_TB_CLIE
@{
    ViewBag.Title = "Mantenimiento de clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!-- ORDEN -->
<section class="" id="main_content">

    <link href="~/Content/ui-search/search.min.css" rel="stylesheet" />
    <ol class="breadcrumb">

        <li class="breadcrumb-item active">@ViewBag.Title </li>
    </ol>
    <div class="container-fluid animated fadeIn">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div id="registro_cliente_card">
                    @Html.Partial("_form")
                </div>
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-edit"></i> Listado
                    </div>
                    <div class="card-body pt-0 pl-3" style="min-height:100px">
                        <div class="row">
                            <div class="col-sm-12 p-1">
                                <table id="TB_CLIE" class="table table-striped table-bordered table-hover table-condensed ctable-with-buttons" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th> Cód. cliente</th>
                                            <th> Nombre</th>
                                            <th> Razón Social</th>
                                            <th> RUC</th>
                                            <th> Observación</th>
                                            <th> Situación</th>
                                            <th> Tipo de cliente</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="_load" data-load="Cliente"></div>

    <div id="_eliminar_cliente" data-request-url="@Url.Action("eliminar_cliente", "Clientes")"></div>
    <div id="_cargar_cliente" data-request-url="@Url.Action("cargar_cliente", "Clientes")"></div>
    <div id="_listar_clientes" data-request-url="@Url.Action("listar_clientes", "Clientes")"></div>
    <div id="_consulta_ruc" data-request-url="@Url.Action("ConsultaRucAsync", "ConsultaRuc")"></div>
    <script src="~/Content/ui-search/search.min.js"></script>
</section>