@model RMS_MODELOS.M_TB_CABE_ORDE
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!-- ORDEN -->
<section class="" id="main_content">

    <link href="~/Content/ui-search/search.min.css" rel="stylesheet" />
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Orden </a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title </li>
    </ol>
    <div class="container-fluid animated fadeIn">
        <div class="row">
            <div class="col-md-12 col-lg-5">
                <div id="registro_form_card">
                    @Html.Partial("_registro_form")
                </div>
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-edit"></i> Detalle
                    </div>
                    <div class="card-body pt-0 pl-3" style="min-height:100px">
                        <div class="row">
                            <div class="col-sm-12 p-1">
                                <table id="TB_DETA_ORDE" class="table table-striped table-bordered table-hover table-condensed ctable-with-buttons" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                Sec.
                                            </th>
                                            <th>
                                                <div style="width:180px"></div>Artículo
                                            </th>
                                            <th>Precio</th>

                                            <th>Cantidad</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="3" style="text-align:right">Total:</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-lg-7">
                @{ Html.RenderAction("Lista_productos_por_clase"); }
            </div>
        </div>
    </div>
    <div class="_load" data-load="Orden"></div>

    <div id="_detalle_data_loader" data-request-url="@Url.Action("listar_detalle_orden", "Orden",new { FN_IDE_ORDE = ViewBag.numero_orden,FI_COD_EMPR = 1 })"></div>

    <div id="_busqueda_clientes" data-request-url="@Url.Action("Busqueda_clientes", "Busqueda")"></div>
    <div id="_buscar_cliente_defecto" data-request-url="@Url.Action("Busqueda_cliente_defecto", "Busqueda")"></div>
    <div id="_busqueda_cliente_por_codigo" data-request-url="@Url.Action("Busqueda_cliente_por_codigo", "Busqueda")"></div>
    <div id="_busqueda_ordenes" data-request-url="@Url.Action("Busqueda_ordenes", "Busqueda")"></div>
    <div id="_busqueda_orden_registrada" data-request-url="@Url.Action("registro_form", "Orden")"></div>
    <div id="_partial_lista_productos_por_clase" data-request-url="@Url.Action("Lista_productos_por_clase", "Orden")"></div>
    <div id="_eliminar_detalle" data-request-url="@Url.Action("eliminar_detalle", "Orden")"></div>


    <script src="~/Content/ui-search/search.min.js"></script>
</section>